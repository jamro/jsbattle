{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "npm start --prefix=./packages/jsbattle",
    "stop": "npm stop --prefix=./packages/jsbattle",
    "restart": "npm restart --prefix=./packages/jsbattle",
    "clean": "lerna run clean --stream",
    "lint": "lerna bootstrap && lerna run lint --stream",
    "build": "lerna bootstrap && lerna run build --stream",
    "test": "lerna bootstrap && lerna run test --stream",
    "ci": "npm run-script clean && npm run-script lint && npm run-script build && npm run-script test",
    "commit": "git-cz"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^3.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
